    @Override
    public Nota achaNotaPorTag(String tag) {
        SQLiteDatabase db = getReadableDatabase();

        Cursor cursor = db.query(TABELA, new String[]{CODIGO, TAG, NOTA, USUARIO}, TAG + " = ?", new String[]{tag}, null, null, null, null);

        if (cursor != null) {
