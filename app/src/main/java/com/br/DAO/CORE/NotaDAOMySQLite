        ContentValues values = new ContentValues();

        values.put(TAG, tag);
        values.put(NOTA, nota);
        values.put(USUARIO, usuario);

        db.update(TABELA, values, CODIGO + " = ?", new String[]{String.valueOf(codigo)});

        return true;
